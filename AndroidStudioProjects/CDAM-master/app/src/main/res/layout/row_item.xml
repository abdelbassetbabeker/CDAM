<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:clickable="true"
    android:id="@+id/RelativeLayout">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/parentView">

        <RelativeLayout
            android:id="@+id/wraperimageView"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:padding="5dp">

            <ImageView
                android:id="@+id/img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter" />
        </RelativeLayout>


        <Button
            android:id="@+id/addToShoppingButton"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/addtoshopping_icon"
            android:layout_toEndOf="@+id/wraperimageView"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="5dp" />

        <RelativeLayout
            android:id="@+id/productName"
            android:layout_toEndOf="@+id/addToShoppingButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp">

            <TextView
                android:id="@+id/name"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="Marshmallow"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@android:color/black"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name"
                android:layout_marginTop="5dp"
                android:text="free shipping"
                android:textSize="10dp"
                android:textColor="@color/lightgray" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/pricesection"
            android:layout_toEndOf="@+id/productName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp">

            <TextView
                android:id="@+id/totalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="DZD"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/totalPrice"
                android:layout_marginTop="5dp"
                android:text="0 x "
                android:textColor="@android:color/black" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/qtysection"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_alignParentEnd="true">

            <Button
                android:id="@+id/btnAdd"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="+"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:background="@drawable/addbutton" />

            <TextView
                android:id="@+id/qty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="15dp"
                android:layout_below="@id/btnAdd"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:textAlignment="center"

                />

            <Button
                android:id="@+id/btnMinus"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="-"
                android:layout_below="@id/qty"
                android:background="@drawable/rounded_stroke" />

        </RelativeLayout>

        <!-- Hidden Section -->


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/additionalDetails"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:visibility="gone"
        android:layout_below="@+id/parentView"
        android:layout_alignParentBottom="true">
        <!-- Add your additional details views here -->
        <!-- Example: TextView for additional information -->
        <TextView
            android:id="@+id/additionalInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Additional Information"
            android:textSize="12sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="5dp" />
        <!-- Add more views as needed -->
    </RelativeLayout>

</RelativeLayout>

